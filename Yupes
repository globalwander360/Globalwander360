@Test
public void findFirstByProductGroupAndEventTest() {
    ThresholdEntity entity = new ThresholdEntity();
    entity.setProductName("Product Name 1");
    entity.setProductGroupName("Product Group 1");
    entity.setEventName("Event 1");
    entity.setSector("+");
    entity.setBranchCode("30004");
    entity.setCountryCode("IN");

    entity = dpwThresholdRepository.save(entity); // âœ… Save test data

    Optional<ThresholdEntity> dpwThreshold = dpwThresholdRepository
        .findFirstByProductNameAndProductGroupNameAndEventNameAndSectorAndBranchCodeAndCountryCode(
            "Product Name 1", "Product Group 1", "Event 1", "+", "30004", "IN"
        );

    assertThat(dpwThreshold).isPresent();
    assertThat(dpwThreshold.get()).isNotNull();
}
