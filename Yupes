@Test(expected = BusinessValidationException.class)
public void linkRequestShouldThrowBusinessValidationException() {
    RequestEntity entity = DpwRepositoryTestHelper.createRequestEntity(1);
    entity.setEvent(null); // causes business validation to fail

    given(requestRepository.findById("1")).willReturn(Optional.of(entity));
    
    service.linkRequest("30004", "1", "1", "1", "e17938", Boolean.TRUE);
}
