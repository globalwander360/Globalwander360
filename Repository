getPropertyNamesByEventIdAndType(eventId: string, propertyType: string): Observable<string[]> {
  return this.transactionPropertyService
    .getPropertyNamesByEventIdAndType(
      getBranchCodeFromId(eventId),
      getCountryCodeFromId(eventId),
      'BNPPUID', // use actual user ID dynamically if available
      eventId,
      propertyType
    )
    .pipe(
      switchMap((response: string[]) => {
        const propertyNames = _.compact(response); // remove nulls
        const sorted = _.sortBy(propertyNames); // default string sort
        return of(sorted);
      })
    );
}
