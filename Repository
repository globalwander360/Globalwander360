@Override
public String getPropertyNameByEventIdAndType(String eventId, String propertyType) {
    return transactionPropertiesRepository.findFirstByEventIdAndPropertyType(eventId, propertyType)
        .map(EventTransactionPropertiesEntity::getTransactionPropertyId)
        .filter(Objects::nonNull)
        .map(String::valueOf)
        .map(dpwEventHelper::getTransactionPropertiesFromRef)
        .filter(Objects::nonNull)
        .flatMap(properties -> properties.stream().findFirst())
        .map(TransactionalProperty::getPropertyName)
        .orElse(null);
}
