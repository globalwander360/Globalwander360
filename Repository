@Override
public List<Long> getPropertyIdsByEventIdAndType(String bnppuid, String branchCode, String countryCode, String eventId, String propertyType) {
    // Step 1: Get list of matching transactionPropertyIds
    List<Long> transactionPropertyIds = transactionPropertiesRepository
            .getPropertyIdsByEventIdAndType(eventId, propertyType);

    // Return empty list if none found
    if (transactionPropertyIds.isEmpty()) {
        return Collections.emptyList();
    }

    // Step 2: Return the list of IDs only (no helper call here)
    return transactionPropertyIds;
}
