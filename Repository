paths:
  /api/transaction-properties/property-ids:
    get:
      tags:
        - TransactionProperty
      summary: Get Property IDs by Property Type
      description: Returns a list of transaction property IDs based on the provided property type.
      operationId: getPropertyIdsByType
      parameters:
        - in: header
          name: bnppuid
          required: true
          schema:
            type: string
        - in: header
          name: branchCode
          required: true
          schema:
            type: string
        - in: header
          name: countryCode
          required: true
          schema:
            type: string
        - in: query
          name: eventId
          required: true
          schema:
            type: string
        - in: query
          name: afr
          required: true
          schema:
            type: string
        - in: query
          name: propertyType
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Successfully retrieved list of property IDs
          content:
            application/json:
              schema:
                type: array
                items:
                  type: string
        '400':
          $ref: '../common-specs/common-errors.yaml#/BadRequestError'
